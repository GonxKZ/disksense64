# DiskSense64 Configuration File
# This file controls the behavior of the DiskSense64 application

[General]
# General application settings
BufferSize=1048576              # 1MB buffer size for I/O operations
MaxConcurrentOps=8             # Maximum concurrent I/O operations
MaxWorkerThreads=0             # 0 = auto-detect based on CPU cores
ExcludePaths=                  # Paths to exclude from scanning (comma-separated)
TempDirectory=                 # Directory for temporary files (default: system temp)
LogLevel=Info                  # Log level: Critical, Error, Warning, Info, Verbose
LogFile=                       # Log file path (default: %APPDATA%/DiskSense64/logs)
MaxLogFileSizeMB=10           # Maximum log file size before rotation
EnableETW=true                 # Enable ETW tracing for performance monitoring

[Index]
# Index database settings
IndexPath=                     # Path to index database (default: %APPDATA%/DiskSense64/index)
IndexFlushIntervalSeconds=30  # Interval to flush index to disk
MaxIndexMemoryMB=512           # Maximum memory to use for index caching
EnableBloomFilters=true       # Enable Bloom filters for faster lookups
CompactOnStartup=false         # Automatically compact index on startup
BackupIndex=true               # Create backup of index before major operations

[Scanner]
# File scanner settings
ScanMethod=Auto                # Scanning method: Auto, Win32, USN
FollowSymlinks=false          # Follow symbolic links and junctions
ComputeHeadTail=true          # Compute head/tail signatures for fast filtering
HeadTailSizeKB=32             # Size of head/tail signature in KB (16-64 KB)
ComputeFullHash=false         # Compute full hash for verification (expensive)
HashAlgorithm=BLAKE3          # Hash algorithm: BLAKE3, SHA256
MinFileSizeBytes=1024          # Minimum file size to process (1KB)
MaxFileSizeBytes=0            # Maximum file size to process (0 = unlimited)
FileExtensions=*              # File extensions to include (* = all)
ExcludeHiddenFiles=true       # Exclude hidden files from scanning
ExcludeSystemFiles=true       # Exclude system files from scanning

[Deduplication]
# Deduplication settings
DefaultAction=Simulate        # Default action: Simulate, Hardlink, MoveToRecycle, Delete
MinFileSizeBytes=1024         # Minimum file size for deduplication (1KB)
MaxFileSizeBytes=0           # Maximum file size for deduplication (0 = unlimited)
UseContentDefinedChunking=true # Use content-defined chunking for large files
ChunkMinSizeKB=128           # Minimum chunk size for CDC (128KB)
ChunkTargetSizeKB=256        # Target chunk size for CDC (256KB)
ChunkMaxSizeKB=4096          # Maximum chunk size for CDC (4MB)
ComputeFullHashForLargeFiles=true # Compute full hash for files > 100MB
VerifyBeforeAction=true      # Verify duplicates before taking action
CreateUndoLog=true           # Create undo log for reversible operations
UndoLogPath=                 # Path for undo log (default: index directory)

[PerceptualSimilarity]
# Perceptual similarity detection settings
EnableImageSimilarity=true   # Enable image similarity detection
EnableAudioSimilarity=true    # Enable audio similarity detection
ImageHashSize=32             # Image hash size: 8, 16, 32, 64
ImageThreshold=5             # Image similarity threshold (0-100)
AudioThreshold=10            # Audio similarity threshold (0-100)
MinImageSizePixels=64       # Minimum image size for processing (64x64 pixels)
MinAudioDurationSeconds=5    # Minimum audio duration for processing (5 seconds)
BatchProcessingSize=1000    # Number of files to process in batches

[ResidueDetection]
# Residue detection settings
EnableResidueDetection=true   # Enable residue detection
ScanSystemDirectories=false   # Scan system directories for residues
ScanUserDirectories=true      # Scan user directories for residues
ScanProgramFiles=true         # Scan Program Files directories
ScanAppData=true              # Scan AppData directories
ScanTempDirectories=true      # Scan temporary directories
ScanRecycleBin=false          # Scan recycle bin for residues
ScanRegistry=true             # Scan registry for orphaned entries
ScanShortcuts=true            # Scan shortcuts for broken links
CleanupLevel=Conservative    # Cleanup level: Conservative, Moderate, Aggressive

[UI]
# User interface settings
Theme=Dark                    # UI theme: Dark, Light, System
Language=en                   # Language: en, es, fr, de, etc.
ShowFileIcons=true            # Show file type icons in listings
ShowFilePaths=true            # Show full file paths in listings
TreeMapColorMode=Size         # TreeMap color mode: Size, Type, Owner, Age
TreeMapShowLabels=true        # Show file names in TreeMap
TreeMapAnimationSpeed=Normal  # Animation speed: Slow, Normal, Fast
EnableTooltips=true           # Enable tooltips on hover
ConfirmBeforeActions=true     # Confirm before performing destructive actions
ShowPerformanceStats=true     # Show real-time performance statistics
RefreshIntervalSeconds=5      # Interval to refresh UI with new data

[Performance]
# Performance tuning settings
IOPriority=Normal             # I/O priority: Idle, Low, Normal, High
CpuPriority=BelowNormal       # CPU priority: Idle, BelowNormal, Normal, AboveNormal, High
MemoryUsageLimitMB=0          # Memory usage limit (0 = unlimited)
EnablePrefetching=true        # Enable file prefetching
PrefetchAheadMB=32            # Amount to prefetch ahead (32MB)
UseNoBuffering=false          # Use FILE_FLAG_NO_BUFFERING for large files
BufferAlignmentSize=4096      # Buffer alignment size for NoBuffering mode
EnableAsyncIO=true            # Enable asynchronous I/O operations
MaxAsyncIOQueueDepth=128     # Maximum depth of async I/O queue
UseMemoryMappedFiles=true     # Use memory-mapped files for large indexes
CompressionLevel=1           # Compression level for index files (0-9, 0=disabled)

[Network]
# Network-related settings (for future cloud features)
EnableCloudSync=false         # Enable cloud synchronization
CloudProvider=None            # Cloud provider: None, OneDrive, GoogleDrive, Dropbox
SyncIntervalMinutes=60       # Sync interval in minutes
BandwidthLimitMbps=0          # Bandwidth limit (0 = unlimited)
EncryptSyncData=true          # Encrypt synchronized data
CompressSyncData=true         # Compress synchronized data

[Security]
# Security-related settings
EnableFileIntegrityChecking=true # Enable file integrity checking
CheckFilePermissions=true         # Check file permissions before operations
RequireAdminForSystemDirs=true    # Require admin privileges for system directories
EnableRecycleBinProtection=true  # Enable protection for recycle bin operations
CreateRestorePoints=true          # Create system restore points before major operations
VerifySignatures=false            # Verify file signatures (EXEs, DLLs, etc.)